{
    "manifest_version": 2,

    "name": "Block Page Assistant",
    "description": "If using DNS based web filtering, this extension will improve the user experience for block pages when using HTTPS.",
    "short_name": "Block Page Assistant",
    "version": "1.0.2",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    "permissions": [
        "webRequest",
        "webNavigation",
        "<all_urls>",
        "storage",
        "tabs",
        "webRequestBlocking",
        "history"
    ],
    "background": {
        "scripts": ["worker.js"]
    }
}
